{% extends '::base.html.twig' %}
{% block main %}
<style type="text/css">
    .content_title { font-weight: bold; }
    .uushine {background-color: #78B270;border: 1px solid #71AD69;color: #FFFFFF;height: 30px;line-height: 30px;padding: 10px;}
</style>
<div class="centercontent">
    <div class="pageheader notab">
        <h1 class="pagetitle">资产管理</h1><br>
        <span class="pagedesc" class="field"><a target="_blank" href="{{ path('tool_assets_list') }}" class="btn btn_link"><span>查询资产</span></a></span>
        <span class="pagedesc" class="field"><a target="_blank" href="{{ path('tool_assets_add') }}" class="btn btn_link"><span>添加新资产</span></a></span>
    </div>
    <!--pageheader-->
    <div id="contentwrapper" class="contentwrapper">
        <form id="queryform" class="stdform_q" action="" method="post">
            <div>
                <p>
                    <label>品牌</label>
                    <span class="field"><input type="text" id="brand" name="brand" class="smallinput" value=""/></span>
                </p>
                <p>
                    <label>型号</label>
                    <span class="field"><input type="text" id="modelType" name="modelType" class="smallinput" value=""/></span>
                </p>
                <p>
                    <label>领用人所在部门</label>
                    <span class="field"><input type="text" id="department" name="department" class="smallinput" value=""/></span>
                </p>
                <p>
                    <label>领用人</label>
                    <span class="field"><input type="text" id="owner" name="owner" class="smallinput" value=""/></span>
                </p>
            </div>
            <div>
                <p>
                    <label>操作</label>
                    <span class="field"><button id="queryform_sub" class="submit radius2">查询</button></span>
                    <span class="field"><a id="queryform_export" class="uushine" href="{{ path('tool_assets_export') }}" target="_blank">导出数据</a></span>
                </p>
            </div>
        </form>
        <div class="contenttitle2">
            <h3>列表结果</h3>
        </div>
        <div id="query_result">
            {% include 'QihooToolBundle:Assets:query_result.html.twig' %}
        </div>
        <img id="loaders" src="/images/loaders/loader6.gif" alt="">
        <div clear="all"></div>
    </div>
    <!--contentwrapper-->
</div>
<!--centercontent-->

<script type="text/javascript">
    //需要传入下面js的变量定义
    var GLOBAL_CONF = {
        "action_delete" : "{{ path('tool_assets_delete') }}",
        "action_query" : "{{ path('tool_assets_query') }}",
        "action_export" : "{{ path('tool_assets_export') }}"
    };
</script>
<script type="text/javascript" src="/bundles/qihootool/js/assets/list.js"></script>
{% endblock %}