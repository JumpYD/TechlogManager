{% extends '::base.html.twig' %}
{% block main %}
<style type="text/css">
    .content_title { font-weight: bold; }
    .link_blue {color: blue; font-weight: bold;}
</style>

<div class="centercontent">

<div class="pageheader notab">
    <h1 class="pagetitle">{{entities.0.day}}详细数据展示</h1>
    <span class="pagedesc">数据详情</span>
</div><!--pageheader-->

<div id="contentwrapper" class="contentwrapper">
    <form id="queryform" class="stdform_q" action="" method="post">
        <div>
            <p>
                <span class="field">
                    <a id="queryform_export" style="" class="btn btn_link" href="" target="#"><span>导出数据</span></a>
                </span>
            </p>
        </div>
    </form>
    <div class="contenttitle2">
        <h3>列表结果</h3>
    </div>
    <div id="query_result">
        {% include 'QihooToolBundle:SzSearch:detailquery.html.twig' %}
    </div>
    
    <img id="loaders" src="/images/loaders/loader6.gif" alt="">
    <br clear="all"><br>
</div><!--contentwrapper-->
</div><!--centercontent-->

<script type="text/javascript">
    //需要传入下面js的变量定义
    var GLOBAL_CONF = {
        "action_query" : "{{ path('tool_szsearch_dquery') }}",
        "action_export" : "{{ path('tool_szsearch_exportkw') }}"
    };
    $("#queryform_export").click(function(){
        var params = {'day': '{{ entities.0.day }}'};
        var url    = GLOBAL_CONF['action_export'];
        var exportUrl = url + "?" + $.param(params);
        location.href = exportUrl;
        return false;
    });
</script>
<script type="text/javascript" src="/bundles/qihootool/js/szsearch/dlist.js"></script>
{% endblock %}