{% extends '::base.html.twig' %}
{% block main %}
<style type="text/css">
    .content_title { font-weight: bold; }
    .uushine {background-color: #78B270;border: 1px solid #71AD69;color: #FFFFFF;height: 30px;line-height: 30px;padding: 10px;}
</style>
<div class="centercontent">
    <div class="pageheader notab">
        <h1 class="pagetitle">卸载调查反馈管理</h1><br>
        <span class="pagedesc" class="field"><a target="_blank" href="{{ path('tool_feedback_list') }}" class="btn btn_link"><span>查询反馈</span></a></span>
        <span class="pagedesc" class="field"><a target="_blank" href="{{ path('tool_feedback_add') }}" class="btn btn_link"><span>添加新反馈</span></a></span>
    </div>
    <!--pageheader-->
    <div id="contentwrapper" class="contentwrapper">
        <form id="queryform" class="stdform_q" action="" method="post">
            <div>
                <p>
                    <label>问题状态</label>
                    <span class="field">
                        <select id="state" name="state" class="uniformselect">
                        <option value="">全部</option>
                        <option value="1">未开始</option>
                        <option value="2">进行中</option>
                        <option value="3">已完成</option>
                        </select>
                    </span>
                </p>
            </div>
            <div>
                <p>
                    <label>反馈时间</label>
                    <span class="field">
                        <input type="text" id="startTime" name="startTime" class="smallinput" value=""/> ~ 
                        <input type="text" id="endTime" name="endTime" class="smallinput" value=""/>
                    </span>
                </p>
            </div>
            <div>
                <p>
                    <label>客户端版本</label>
                    <span class="field"><input type="text" id="version" name="version" class="smallinput" value=""/></span>
                </p>
            </div>
            <div>
                <p>
                    <label>操作人</label>
                    <span class="field"><input type="text" id="operator" name="operator" class="smallinput" value=""/></span>
                </p>
            </div>
            <div>
                <p>
                    <label>反馈问题</label>
                    <span class="field"><input type="text" id="question" name="question" class="smallinput" value=""/></span>
                </p>
            </div>
            <div>
                <p>
                    <label>操作</label>
                    <span class="field"><button id="queryform_sub" class="submit radius2">查询</button></span>
                </p>
            </div>
        </form>
        <div class="contenttitle2">
            <h3>列表结果</h3>
        </div>
        <div id="query_result">
            {% include 'QihooToolBundle:FeedBack:query_result.html.twig' %}
        </div>
        <img id="loaders" src="/images/loaders/loader6.gif" alt="">
        <div clear="all"></div>
    </div>
    <!--contentwrapper-->
</div>
<!--centercontent-->

<script type="text/javascript">
    //需要传入下面js的变量定义
    var GLOBAL_CONF = {
        "action_delete" : "{{ path('tool_feedback_delete') }}",
        "action_query" : "{{ path('tool_feedback_query') }}"
    };
</script>
<script type="text/javascript" src="/bundles/qihootool/js/feedback/list.js"></script>
{% endblock %}