{% extends '::base.html.twig' %}
{% block main %}
<style type="text/css">
    .content_title { font-weight: bold; }
</style>

<div class="centercontent">

<div class="pageheader notab">
    <h1 class="pagetitle">卸载调查反馈问题详细信息</h1><br>
        <span class="pagedesc" class="field"><a target="_blank" href="{{ path('tool_feedback_list') }}" class="btn btn_link"><span>查询反馈</span></a></span>
        <span class="pagedesc" class="field"><a target="_blank" href="{{ path('tool_feedback_add') }}" class="btn btn_link"><span>添加新反馈</span></a></span>
</div><!--pageheader-->

<div id="contentwrapper" class="contentwrapper">
    <div class="contenttitle2">
        <h3>反馈问题详细信息</h3>
    </div>
    <table id="logo_table" cellpadding="0" cellspacing="0" border="0" class="stdtable">
        <thead class="center">
        <tr>
            <td width="5%">序号</td>
            <td width="5%">客户端版本</td>
            <td width="20%">反馈问题</td>
            <td width="5%">状态</td>
            <td width="10%">处理情况</td>
            <td width="5%">操作人员</td>
            <td width="5%">处理时间</td>
            <td width="5%">反馈时间</td>
        </tr>
        </thead>
        <tbody class="center">
            <tr>
                <td>{{ feedback.id }}</td>
                <td>{{ feedback.version }}</td>
                <td>{{ feedback.question }}</td>
                <td>{% if feedback.state == 1 %}未开始{% elseif feedback.state == 2 %}进行中{% elseif feedback.state == 3 %}已完成{% endif %}</td>
                <td>{{ feedback.process }}</td>
                <td>{{ feedback.operator }}</td>
                <td>{{ feedback.updateTime | date('Y-m-d H:i:s') }}</td>
                <td>{{ feedback.createTime | date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}